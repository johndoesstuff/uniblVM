.MACRO SET64 addr, val
; save state
STA64 TEMP_SET
v:
VOID %val
; set A to value
LDA64 v+1
; set addr to a
STA64 %addr
; reset state
LDA64 TEMP_SET
.ENMAC

.MACRO PUSHA
; save state of B
STB64 TEMP_PUSH
; load stack pointer to B
SETBZ
LDB16 P_STACK
; set *sp to A
STAB64
; inc B by 8 (64bit addr width)
INC8B16
; restore incremented stack pointer
STB16 P_STACK
; restore state of B
LDB64 TEMP_PUSH
.ENMAC
